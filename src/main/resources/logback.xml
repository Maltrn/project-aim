<configuration>

    <contextName>Project A.I.M. Backend</contextName>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>

            <pattern>%d{ISO8601} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>
